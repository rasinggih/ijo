<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginStart="16dp"
    android:layout_marginLeft="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginRight="16dp"
    android:background="@drawable/border_dialog"
    android:backgroundTint="#E4E1E1"
    tools:context=".frm_lupasandi">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout11"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:background="@drawable/border_dialog"
        android:backgroundTint="#305031"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView401"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            android:text="GANTI KATA SANDI"
            android:textColor="#FFFFFF"
            android:textSize="24dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/constraintLayout11"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout26"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/border_dialog"
        android:orientation="vertical"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView7"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/tv_1"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="Kode Verifikasi"
            android:textAlignment="center"
            android:textColor="@android:color/background_dark"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:padding="5dp"
            android:text='Silahkan klik "Dapatkan Kode", kode verifikasi akan dikirimkan dan diterima melalui SMS (pastikan nomor Telepon anda aktif), Silahkan Cek Pesan SMS Yang Dikirimkan. Jika gagal hubungi HRD/Personalia'
            android:textAlignment="center"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp"
            android:textStyle="italic"
            app:layout_constraintEnd_toEndOf="@+id/et_kode_verifikasi"
            app:layout_constraintHorizontal_bias="0.928"
            app:layout_constraintStart_toStartOf="@+id/et_kode_verifikasi"
            app:layout_constraintTop_toBottomOf="@+id/et_kode_verifikasi" />

        <EditText
            android:id="@+id/et_kode_verifikasi"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/bg_minimalist"
            android:hint="@string/masukkan_kode_verifikasi"
            android:inputType="textImeMultiLine|textCapCharacters"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textColorHint="#6E6C6C"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:weightSum="2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_2">

            <Button
                android:id="@+id/btn_verifikasi"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginEnd="1dp"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@drawable/tbl_l_btn"
                android:backgroundTint="@color/colorPrimaryDark"
                android:foreground="@drawable/tbl_l_btn"
                android:text="DAPATKAN KODE"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold"
                app:backgroundTint="#305031" />

            <Button
                android:id="@+id/btn_verifikasi4"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginStart="1dp"
                android:layout_marginLeft="1dp"
                android:layout_weight="1"
                android:background="@drawable/tbl_r_btn"
                android:backgroundTint="@color/colorPrimaryDark"
                android:foreground="@drawable/tbl_r_btn"
                android:text="VERIFIKASI KODE"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold"
                app:backgroundTint="#305031" />

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:id="@+id/scrollView7"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="65dp"
        android:layout_marginEnd="4dp"
        android:background="@drawable/border_dialog"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/constraintLayout11"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_reg2"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginStart="8dp"
                android:gravity="center"
                android:text="NIK"
                android:textAlignment="viewStart"
                android:textColor="@android:color/background_dark"
                android:textSize="14dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/et_reg_nik"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/et_reg_nik" />

            <TextView
                android:id="@+id/tv_reg3"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:gravity="center"
                android:text="No. Telp"
                android:textAlignment="viewStart"
                android:textColor="@android:color/background_dark"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/et_reg_telp"
                app:layout_constraintStart_toStartOf="@+id/tv_reg2"
                app:layout_constraintTop_toTopOf="@+id/et_reg_telp" />

            <EditText
                android:id="@+id/et_reg_nik"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/bg_minimalist"
                android:drawableStart="@drawable/user"
                android:drawableLeft="@drawable/user"
                android:drawablePadding="8dp"
                android:hint="Masukkan NIK"
                android:inputType="textCapCharacters"
                android:padding="8dp"
                android:textColor="#000000"
                android:textColorHint="#6E6C6C"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/et_reg_telp"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="HardcodedText" />

            <EditText
                android:id="@+id/et_reg_telp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/bg_minimalist"
                android:drawableStart="@drawable/telp"
                android:drawableLeft="@drawable/telp"
                android:drawablePadding="8dp"
                android:hint="No. Telp Ex. 08xxxx"
                android:inputType="phone"
                android:padding="8dp"
                android:textColor="#000000"
                android:textColorHint="#6E6C6C"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tv_reg3"
                app:layout_constraintTop_toBottomOf="@+id/et_reg_nik"
                tools:ignore="HardcodedText" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clsandi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/border_dialog"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView7"
        tools:visibility="gone">

        <Button
            android:id="@+id/btn_lppass_save"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="14dp"
            android:background="@drawable/tbl_lr_bottom"
            android:backgroundTint="@color/colorPrimaryDark"
            android:foreground="@drawable/tbl_lr_bottom"
            android:text="SIMPAN KATA SANDI"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="14dp"
            android:textStyle="bold"
            android:visibility="visible"
            app:backgroundTint="#305031"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_lppass_pass2" />

        <EditText
            android:id="@+id/et_lppass_pass2"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/bg_minimalist"
            android:drawableStart="@drawable/key"
            android:hint="Ulangi Kata Sandi"
            android:drawablePadding="8dp"
            android:inputType="textPassword|textImeMultiLine"
            android:paddingLeft="15dp"
            android:textColor="#000000"
            android:textColorHint="#6E6C6C"
            android:textSize="14sp"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tv_lppass_pass2"
            app:layout_constraintTop_toBottomOf="@+id/tv_lppass_pass2"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/tv_lppass_pass2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="Ulangi Kata Sandi"
            android:textAlignment="viewStart"
            android:textColor="@android:color/background_dark"
            android:textSize="14sp"
            android:textStyle="bold"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="@+id/tv_lppass_pass"
            app:layout_constraintTop_toBottomOf="@+id/et_lppass_pass"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/et_lppass_pass"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/bg_minimalist"
            android:drawableStart="@drawable/key"
            android:drawableLeft="@drawable/key"
            android:hint="Masukkan Kata Sandi"
            android:drawablePadding="8dp"
            android:inputType="textPassword|textImeMultiLine"
            android:paddingLeft="15dp"
            android:textColor="#000000"
            android:textColorHint="#6E6C6C"
            android:textSize="14sp"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tv_lppass_pass"
            app:layout_constraintTop_toBottomOf="@+id/tv_lppass_pass" />

        <TextView
            android:id="@+id/tv_pass2"
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:layout_marginEnd="4dp"
            android:background="@drawable/pass2"
            android:clickable="true"
            android:drawableStart="@drawable/visibility_off"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/et_lppass_pass2"
            app:layout_constraintEnd_toEndOf="@+id/et_lppass_pass2"
            app:layout_constraintTop_toTopOf="@+id/et_lppass_pass2" />

        <TextView
            android:id="@+id/tv_pass"
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:layout_marginEnd="4dp"
            android:background="@drawable/pass2"
            android:clickable="true"
            android:drawableStart="@drawable/visibility_off"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/et_lppass_pass"
            app:layout_constraintEnd_toEndOf="@+id/et_lppass_pass"
            app:layout_constraintTop_toTopOf="@+id/et_lppass_pass" />

        <TextView
            android:id="@+id/tv_lppass_pass"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="Kata Sandi"
            android:textAlignment="viewStart"
            android:textColor="@android:color/background_dark"
            android:textSize="14sp"
            android:textStyle="bold"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>